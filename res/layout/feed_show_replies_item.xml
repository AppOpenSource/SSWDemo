<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/replies_avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:background="@drawable/user_img" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/replies_sponsor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:text="邓那"
            android:textColor="#8B755A"
            android:textSize="@dimen/feed_sponsor_font_size" />

        <TextView
            android:id="@+id/replies_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:text="okok!"
            android:textColor="#000000"
            android:textSize="@dimen/feed_reply_font_size" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/replies_time"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="2012/1/1"
                    android:textColor="@android:color/black"
                    android:gravity="bottom|left"
                    android:textSize="@dimen/feed_time_font_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:orientation="horizontal" >

                <FrameLayout
                    android:id="@+id/replies_attachment_number_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="left" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|center" >

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/replies_attachment"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:padding="5dp"
                            android:src="@drawable/ic_launcher" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right|center"
                        android:layout_marginRight="2dp" >

                        <TextView
                            android:id="@+id/replies_attachment_number"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/ic_launcher"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="22"
                            android:textColor="@android:color/white"
                            android:textSize="5dp" />
                    </LinearLayout>
                </FrameLayout>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/replies_comment_to_comment"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:padding="5dp"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>