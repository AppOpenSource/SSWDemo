<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/title_item_linear">

	<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:gravity="center_vertical"
    android:background="@drawable/shopping_cart_group_bg">

		<CheckBox
		    android:id="@+id/shop_cb"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    android:button="@drawable/check_box_group_bg"
        	android:layout_marginLeft="@dimen/shopping_cart_margin"
		    />
<!--         	android:button="@drawable/icon_shopping_cart_item_title_checkbox" -->

		<TextView
		    android:id="@+id/shop_name_tv"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:layout_toRightOf="@id/total_price_cb"
		    android:gravity="center"
        	android:paddingLeft="@dimen/shopping_cart_padding"
        	android:singleLine="true"
        	android:textColor="@color/black"
		    android:text="TextView" />

    
	</LinearLayout>

</LinearLayout>
