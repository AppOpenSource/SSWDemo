<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/community_bg"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_info_bg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/truename"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#717171"/>
<!--          <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="账户余额：35.45元"
            android:textColor="#717171"
            android:textStyle="bold"/> -->
    </LinearLayout>
   <LinearLayout
       android:layout_width="fill_parent" 
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_margin="10dp"
       android:background="@drawable/wo_item_bg">
         <!-- 未完成订单 -->
    <com.sswdemo.views.OrderItemView
        android:id="@+id/Orderbacklog_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#cbcbcb" />
    <!-- 历史订单 -->
    <com.sswdemo.views.OrderItemView
        android:id="@+id/OrderHistory_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" />
   </LinearLayout>
      <LinearLayout
       android:layout_width="fill_parent" 
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_margin="10dp"
       android:background="@drawable/wo_item_bg">
    <!-- 账户信息-->
    <com.sswdemo.views.OrderItemView
        android:id="@+id/AccountInfo_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#cbcbcb" />
     <!-- 修改密码-->
    <com.sswdemo.views.OrderItemView
        android:id="@+id/ChangePassword_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" />
   
   </LinearLayout>
     <LinearLayout
       android:layout_width="fill_parent" 
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_margin="10dp"
       android:background="@drawable/wo_item_bg">
     <!-- 我的关注-->
    <com.sswdemo.views.OrderItemView
        android:id="@+id/Myfocus_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" />
      <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#cbcbcb" />
      <!-- 消息中心-->
    <com.sswdemo.views.OrderItemView
        android:id="@+id/MessageCenter_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" />
   </LinearLayout>
</LinearLayout>