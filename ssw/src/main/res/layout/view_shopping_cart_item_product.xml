<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" 
    android:background="@drawable/list_item_color_bg"
    android:paddingTop="@dimen/shopping_cart_padding_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <!-- android:background="@drawable/bg_shopping_cart_item_shop" -->

        <CheckBox
            android:id="@+id/product_price_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/check_box_item_bg"
            android:layout_marginLeft="@dimen/shopping_cart_margin_product" />
        <!-- android:button="@drawable/icon_shopping_cart_item_product_checkbox" -->

        <ImageView
            android:id="@+id/product_price_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/shopping_cart_margin"
            android:src="@drawable/icon" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/shopping_cart_margin" 
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="@dimen/shopping_cart_padding_small" >

            <TextView
                android:id="@+id/product_title_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <TextView
                android:id="@+id/product_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
            <EditText 
                 android:id="@+id/product_amount"
                android:layout_width="60dp"
                android:textColorHint="#000000"
                android:layout_height="wrap_content"
                />
          </LinearLayout>
            <TextView
                android:id="@+id/product_description_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@drawable/bg_shopping_cart_divider"
        android:layout_marginTop="@dimen/shopping_cart_padding_small"
        />

</LinearLayout>